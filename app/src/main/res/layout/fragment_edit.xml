<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kaz_furniture.todoapplication.editInfo.EditViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#ffe4e1"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="タイトル変更"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/exTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:text="EXTITLE"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新しいタイトルを入力"
            android:text="@={viewModel.reTitle}"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/exTitle"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="〆切日時変更"
            android:id="@+id/dead_line"
            app:layout_constraintTop_toBottomOf="@id/title_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/exDeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dead_line"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:text="EXDEADLINE"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dead_line_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新しい〆切日時を入力"
            android:text="@={viewModel.reDeadTime}"
            app:layout_constraintTop_toBottomOf="@+id/exDeadLine"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="備考変更"
            android:id="@+id/memo"
            app:layout_constraintTop_toBottomOf="@id/dead_line_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/exMemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/memo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:text="EXMEMO"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/memo_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新しい備考を入力（任意）"
            android:text="@={viewModel.reMemo}"
            app:layout_constraintTop_toBottomOf="@+id/exMemo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>