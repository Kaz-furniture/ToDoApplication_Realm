<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="addInfo"
            type="kaz_furniture.todoapplication.addInfo.AddActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#ffe4e1"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="タイトル"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="タイトルを入力"
            android:text="@={addInfo.title}"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="〆切日時"
            android:id="@+id/dead_line"
            app:layout_constraintTop_toBottomOf="@id/title_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dead_line_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="〆切日時を入力"
            android:text="@={addInfo.deadTime}"
            app:layout_constraintTop_toBottomOf="@+id/dead_line"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="備考"
            android:id="@+id/memo"
            app:layout_constraintTop_toBottomOf="@id/dead_line_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/memo_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="備考を入力（任意）"
            android:text="@={addInfo.memo}"
            app:layout_constraintTop_toBottomOf="@+id/memo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>